        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: input_number
                text: ' '
                font_size: 48
                on_text: app.convert_miles()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
            Button:
                text: 'Clear'
                on_press: app.clear_miles()
